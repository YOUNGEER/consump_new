<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.youyou.xiaofeibao.util.CircularImage
            android:id="@+id/iv_img"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_marginBottom="@dimen/x8"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:scaleType="centerCrop"
            android:src="@mipmap/benefit"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="张。。。。撒"
                android:textColor="#878988"
                android:textSize="@dimen/x12"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:orientation="horizontal">

                <com.youyou.xiaofeibao.version2.widget.ListStar
                    android:id="@+id/liststar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x12"
                    android:gravity="center_vertical|right"
                    app:starCount="5"
                    app:starEmpty="@mipmap/star_uncheck"
                    app:starFill="@mipmap/star_check_full"
                    app:starHalf="@mipmap/star_half"
                    app:starImageSize="@dimen/x8"
                    app:starPadding="0dp"
                    app:starStep="0.5"
                    app:stepSize="Half"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2011.2.5"
                    android:textColor="#C3C3C3"
                    android:textSize="@dimen/x8"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x12"
        android:text="目前国际上的著名商城如亚马逊、梅西等都已经广泛的使用商品评价系统。
        国内的淘宝商城也提供了消费者对所购商品的评论系统，
        但是该系统更偏向于消费者的评论或者购物感受，因此并不能真实反映每一个商品对消费者的客观价值，
        对消费者的参考意义受到了比较大的局限"
        android:textColor="#929493"
        android:textSize="@dimen/x10"/>

</LinearLayout>

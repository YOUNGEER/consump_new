<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_marginRight="@dimen/activity_horizontal_margin"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_img"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_header"
        android:layout_margin="@dimen/x12"
        android:layout_width="@dimen/x75"
        android:layout_height="@dimen/x75"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x12"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="@dimen/x3"
                android:textColor="@color/shopname"
                android:textSize="@dimen/textsise_mmiddle"
                android:singleLine="true"
                android:layout_gravity="bottom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_discount"
                android:background="@drawable/bg_discount"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x4"
                android:layout_marginRight="@dimen/x12"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x11"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_addr"
            android:gravity="center_vertical"
            android:textColor="@color/shopaddr"
            android:singleLine="true"
            android:layout_marginTop="@dimen/x6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginRight="@dimen/x12"
            android:layout_height="wrap_content">

            <com.youyou.xiaofeibao.version2.widget.ListStar
                android:id="@+id/liststar_alliance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/x12"
                android:gravity="center_vertical"
                app:starCount="5"
                app:starEmpty="@mipmap/star_uncheck"
                app:starFill="@mipmap/star_check_full"
                app:starHalf="@mipmap/star_half"
                app:starImageSize="@dimen/x11"
                app:starPadding="1dp"
                app:starStep="0.5"
                app:stepSize="Half"/>

            <TextView
                android:id="@+id/star_num"
                android:text="4.7"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/x10"
                android:textColor="#979394"
                android:layout_marginLeft="@dimen/x2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_distance"
                android:textSize="@dimen/x10"
                android:textColor="#979394"
                android:drawablePadding="@dimen/x4"
                android:gravity="right|center_vertical"
                android:drawableLeft="@mipmap/dw"
                android:text="17.85km"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

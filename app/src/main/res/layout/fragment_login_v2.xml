<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/phone_num"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x12"
                    android:padding="@dimen/y10"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_phone"
                    android:hint="@string/hint_phone_num"
                    android:textColorHint="@color/hint_phonenum"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x12"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:inputType="number"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_weight="4"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="密        码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x12"
                    android:padding="@dimen/y10"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_pwd"
                    android:hint="@string/hint_pwd"
                    android:textColorHint="@color/hint_phonenum"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x12"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_weight="4"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <View
                android:background="@color/bg_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"/>

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:text="@string/forget_pwd"
                android:textSize="@dimen/x10"
                android:layout_width="match_parent"
                android:gravity="right|center_vertical"
                android:textColor="#414040"
                android:layout_margin="@dimen/x12"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_login"
                android:text="@string/login"
                style="@style/next_btn"
                android:layout_marginTop="@dimen/x35"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginLeft="@dimen/x30"
                />

            <LinearLayout
                android:layout_marginTop="@dimen/x20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/line_color"
                    android:layout_height="@dimen/x1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="或"
                    android:layout_margin="@dimen/x10"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:background="@color/line_color"
                    android:layout_height="@dimen/x1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/tv_weixin"
                    android:drawableTop="@mipmap/weixin"
                    android:text="微信登陆"
                    android:textColor="#7D7B7C"
                    android:textSize="@dimen/x10"
                    android:drawablePadding="@dimen/x8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_zfb"
                    android:drawableTop="@mipmap/zfb"
                    android:text="支付宝登陆"
                    android:textColor="#7D7B7C"
                    android:textSize="@dimen/x10"
                    android:drawablePadding="@dimen/x8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:visibility="gone"
                    android:drawableTop="@mipmap/qq"
                    android:text="QQ登陆"
                    android:textColor="#7D7B7C"
                    android:textSize="@dimen/x10"
                    android:drawablePadding="@dimen/x8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

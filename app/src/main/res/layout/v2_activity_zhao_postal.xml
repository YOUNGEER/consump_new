<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/sl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_bank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/x12">


            <TextView
                android:id="@+id/tv_bankname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4E4E4E"
                android:textSize="@dimen/x13"/>

            <TextView
                android:id="@+id/tv_bankdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_bankname"
                android:layout_marginTop="@dimen/x4"
                android:textColor="#888888"
                android:textSize="@dimen/x12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/arrow"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:background="@color/white"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:paddingTop="@dimen/x12"
            android:text="提现金额"
            android:textColor="#888888"
            android:textSize="@dimen/x12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x14"
                android:text="¥"
                android:textColor="@color/black"
                android:textSize="@dimen/x12"/>

            <EditText
                android:id="@+id/et_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingTop="@dimen/x8"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textSize="@dimen/x15"
                android:textStyle="bold"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/x12"
                android:textColor="#888888"
                android:textSize="@dimen/x12"/>

            <TextView
                android:id="@+id/tv_addall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x12"
                android:text="全部提现"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/x12"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:paddingTop="@dimen/x12"
            android:text="*注意：提现金额将在1个工作日后到账"
            android:textColor="#888888"
            android:textSize="@dimen/x10"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x12"
            android:text="*提现时间：T+1"
            android:textColor="#888888"
            android:textSize="@dimen/x10"
            android:textStyle="normal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x12"
            android:text="*部分银行10元以下提现额度无短信提示"
            android:textColor="#888888"
            android:textSize="@dimen/x10"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tv_sure"
            style="@style/next_btn"
            android:layout_marginTop="@dimen/x20"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:text="立即提现"
            />
    </LinearLayout>

</com.handmark.pulltorefresh.library.PullToRefreshScrollView>

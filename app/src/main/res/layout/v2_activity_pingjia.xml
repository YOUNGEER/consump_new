<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="@dimen/x12"
        android:layout_height="wrap_content">

        <com.youyou.xiaofeibao.util.CircularImage
            android:id="@+id/iv_img"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/x35"/>

        <TextView
            android:id="@+id/tv_name"
            android:text="潘跑跑"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
        android:text="为商家服务打分"
        android:gravity="center"
        android:textColor="#919191"
        android:textSize="@dimen/x13"
        android:layout_marginTop="@dimen/x12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.youyou.xiaofeibao.version2.widget.ListStar
        android:id="@+id/liststar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x25"
        android:gravity="center"
        app:starCount="5"
        app:starEmpty="@mipmap/star_uncheck"
        app:starFill="@mipmap/star_check_full"
        app:starHalf="@mipmap/star_half"
        app:starImageSize="@dimen/x25"
        app:starPadding="8dp"
        app:starStep="0"
        app:stepSize="Full"/>

    <EditText
        android:id="@+id/et_content"
        android:layout_marginTop="@dimen/x15"
        android:hint="请输入您的评价"
        android:textColorHint="#aaa"
        android:textSize="@dimen/x10"
        android:padding="@dimen/x12"
        android:minHeight="@dimen/x50"
        android:maxHeight="@dimen/x80"
        android:background="@null"
        android:textColor="#919191"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_weight="1"
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/tv_submit"
        android:background="@color/colorPrimary"
        android:text="提交评价"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/x15"
        android:padding="@dimen/x12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_margin="@dimen/x12"
                android:src="@mipmap/dp"/>

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/x15"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eee"
            android:padding="@dimen/x12"
            android:text="选择支付方式"
            android:textColor="#6D6C73"
            android:textSize="@dimen/x12"/>

        <RelativeLayout
            android:id="@+id/rl_wx"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x12">

            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:scaleType="fitXY"
                android:src="@mipmap/wx_pay"/>

            <TextView
                android:id="@+id/tv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_toRightOf="@+id/iv_wx"
                android:text="微 信 支 付"
                android:textColor="#273238"
                android:textSize="@dimen/x12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_toRightOf="@+id/tv_wx"
                android:text="推荐使用安装微信5.0以上版本使用"
                android:textColor="#AFAFAF"
                android:textSize="@dimen/x9"/>


            <CheckBox
                android:id="@+id/iv_wx_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_pay"
                android:button="@null"
                android:clickable="false"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x12"
            android:background="#eee"/>

        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/rl_zfb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x12">

            <ImageView
                android:id="@+id/iv_zfb"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:scaleType="fitXY"
                android:src="@mipmap/zfb_pay"/>

            <TextView
                android:id="@+id/tv_zfb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_toRightOf="@+id/iv_zfb"
                android:text="支付宝支付"
                android:textColor="#273238"
                android:textSize="@dimen/x12"/>


            <CheckBox
                android:id="@+id/iv_alipay_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_zfb"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_pay"
                android:button="@null"
                android:clickable="false"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x12"
            android:background="#eee"/>

        <TextView
            android:id="@+id/pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x12"
            android:layout_marginRight="@dimen/x12"
            android:layout_marginTop="@dimen/x25"
            android:background="@drawable/bg_pay_button"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/x15"/>

    </LinearLayout>

</ScrollView>

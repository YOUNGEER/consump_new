    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_dialog_bg</item>
        <item name="android:windowIsFloating">true</item>

    </style>

    <!--v2-->
    <style name="style_rb_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/textsise_ssmall</item>
        <item name="android:textColor">@drawable/v2_bg_tab_textcolor</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_margin">@dimen/x4</item>
        <item name="android:drawablePadding">@dimen/x2</item>
    </style>


    <style name="style_home_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/x12</item>
        <item name="android:drawablePadding">@dimen/x12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_10</item>

    </style>


    <style name="next_btn">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsise_small_</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_sure_btn</item>
        <item name="android:layout_marginLeft">@dimen/x12</item>
        <item name="android:layout_marginRight">@dimen/x12</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="select_loan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/y5</item>
        <item name="android:paddingBottom">@dimen/y5</item>
        <item name="android:paddingRight">@dimen/y4</item>
        <item name="android:paddingLeft">@dimen/y4</item>
        <item name="android:textSize">@dimen/textsise_small</item>
        <item name="android:textColor">@color/select_item</item>
    </style>

    <style name="GridPasswordView"/>

